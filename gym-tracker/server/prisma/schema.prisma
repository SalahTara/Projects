generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model user {
  // Shared Between Email Sign up and Google Sign up
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Email Specific
  username String? @unique
  password String?

  // Google Specific
  googleId String? @unique // Google "sub"
  name     String?
}

model exerciseCategory {
  id         Int        @id @default(autoincrement())
  category   String
  exerciseId Int?
  exercise   exercise[]
}

model exercise {
  id                 Int                @id @default(autoincrement())
  name               String
  category           exerciseCategory[]
  exerciseCategoryId Int?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}
